@{
    ViewBag.Title = "Checks & Balances | Choose State";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ChecksAndBalances.Web.Models.HomeViewModel

@section header {
    <style type="text/css">
        .state-dropdown {
            display: inline;
        }
    </style>
}

@section sectionTitle {
    <section class="section-title">
        <div class="container">
            <h1><span>Welcome</span>. Choose Your State</h1>
        </div>
    </section>
}

<!-- Start Content -->
<section id="content" class="container">
    <div id="state-map" class="big-map" class="add-top"></div>
    <span style="display: none;" id="StateName"></span>

    @using (Html.BeginForm())
    {
        @Html.DropDownListFor(x => x.SelectedState, Model.States, new { @class = "state-dropdown" })
        <input type="submit" class="button" value="Go" />
    }
    <hr class="divider1" />

    @Html.DisplayFor(x => x.SelectedState)
</section>

@section footer {
    <script src="~/Scripts/gmaps.state-highlight.js" type="text/javascript"></script>
    <script type="text/javascript">
        stateMap.initialize();
    </script>
}